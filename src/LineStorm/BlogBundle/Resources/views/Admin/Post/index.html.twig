{% extends '::base.html.twig' %}

{% block body -%}
    <h1>BlogPost list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>Createdon</th>
                <th>Editedon</th>
                <th>Liveon</th>
                <th>Deletedon</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('linestorm_blog_admin_post_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.title }}</td>
                <td>{{ entity.body }}</td>
                <td>{% if entity.createdOn %}{{ entity.createdOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.editedOn %}{{ entity.editedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.liveOn %}{{ entity.liveOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.deletedOn %}{{ entity.deletedOn|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('linestorm_blog_admin_post_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('linestorm_blog_admin_post_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('linestorm_blog_admin_post_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
