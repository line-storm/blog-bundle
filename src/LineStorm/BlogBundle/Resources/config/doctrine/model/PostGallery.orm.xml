<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="LineStorm\BlogBundle\Entity\BlogPostGallery" table="blog_post_gallery">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="body" type="text" column="body" precision="0" scale="0" nullable="false"/>
    <field name="order" type="integer" column="order" precision="0" scale="0" nullable="false"/>
    <one-to-many field="images" target-entity="LineStorm\BlogBundle\Entity\BlogPostGallery" mapped-by="gallery"/>
    <many-to-one field="post" target-entity="LineStorm\BlogBundle\Entity\BlogPost" inversed-by="galleries">
      <join-columns>
        <join-column name="post_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
